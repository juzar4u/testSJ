<form class="form-horizontal" role="form">
    <h3 class="bg-success" role="alert" id="topMessage">{{message}}</h3>
    <h3 class="bg-danger" role="alert">{{errorName}}</h3>
    <div class="col-sm-6 col-lg-12">
       <div class="form-group">
            <label class="control-label col-sm-2" for="CategoryName">Category Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="CategoryName" id="CategoryName" placeholder="Enter Category Name">
            </div>
        </div>

        <input type="hidden" name="UserID" id="UserID" />
        <br />
        <input type="submit" class="btn btn-default" value="Submit" />
    </div>
</form>