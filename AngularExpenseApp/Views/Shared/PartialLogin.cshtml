<div id="login" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modelTitle">Login</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                <form class="form-horizontal" role="form">
                    <div class="col-sm-12">
                        <h5 class="alert alert-success" role="alert" id="LoginSuccess" style="display:none"></h5>
                        <h5 class="alert alert-danger" role="alert" id="LoginErrMsg" style="display:none"></h5>
                    </div>
                    <div class="col-sm-6 col-lg-12">
                        <div class="form-group input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-user fa-lg" aria-hidden="true"></i>
                            </span>
                            <input type="text" class="form-control" placeholder="Enter UserName" name="LoginUserName" id="LoginUserName">
                        </div>

                        <div class="form-group input-group">
                            <span class="input-group-addon">
                                <span class="fa fa-asterisk fa-lg"></span>
                            </span>
                            <input type="password" class="form-control" placeholder="Enter Password" name="LoginPassword" id="LoginPassword">
                        </div>
                        <br />
                        <input type="submit" class="btn btn-default" value="Submit" id="loginSubmit" />
                    </div>
                </form>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<script type="text/javascript">
  
        $("#loginClick").click(function () {
            if ($("#wrapper").hasClass("toggled")) {
                $("#wrapper").removeClass("toggled");
            }
        });

        $("#loginSubmit").click(function () {

            if ($("#LoginUserName").val() == '' || $("#LoginPassword").val() == '') {
                $("#LoginErrMsg").css('display', 'block');
                $("#LoginErrMsg").html('All Fields are Required');
                return false;

            }

        });

        
    
</script>